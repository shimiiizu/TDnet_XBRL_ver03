Class BS_qcbs_ifrs_:

    def __init__(self, code, folder_path):
        self.code = code
        self.folder_path = folder_path
        self.bs_file_path_lists = mb.get_acbs_list(os.path.join(folder_path, code))

    def process_bs_files(self, bs_file_path_lists):
        for bs_file_path in bs_file_path_lists:
            pbc.print_bs_common_info(bs_file_path)
            pbi.print_bs_ifrs_info(bs_file_path)
            cd.create_bs_db_record(bs_file_path)

